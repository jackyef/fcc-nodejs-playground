<head>
  <title>VueChat | Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=1.0, minimum-scale=1.0, maximum-scale=1.0">
  <link rel="stylesheet" href="/css/watch-bootstrap.css">
  <link rel="stylesheet" href="/css/chat-bubble.css">
  <link rel="stylesheet" href="/css/vue-chat-login.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.js"></script>
  <script src="/js/vue.js"></script>
  <script src="/js/moment.min.js"></script>
</head>
<body background="/img/chat/login-bg.png">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="login-dialog">
          <h3>Login to VueChat</h3>
          <form class="form-group" method="GET" action="/chat-app">
            <input class="form-control" type="text" name="username" placeholder="Your username here"/>
            <input class="form-control" type="password" name="password" placeholder="Your password here"/>
            <button class="btn btn-success form-control"><i class="fa fa-sign-in"></i> Log in</button>
          </form>
          <button class="btn btn-info btn-block btn-fb"><i class="fa fa-facebook"></i> Sign in with Facebook</button>
        </div>
      </div>
    </div>
  </div>
</body>