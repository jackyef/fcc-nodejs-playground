<div class="container">    
  <div class="row">
    <div class="col-sm-4">
      <%- include("templates/sidebar") %>
    </div>


    <div class="col-sm-8">
        <h3>Create a new poll</h3>

        <div class="col-sm-12 row well well-sm">
          <form class="form-group" method="POST" action="new">
            <p>
              <input class="form-control" type="text" placeholder="Poll title" id="pollTitle" name="pollTitle" required/>
            </p>
            <div class="col-sm-8">
              <div id="options">
                <p><input class="form-control" type="text" name="pollOptions[]" placeholder="Option" required/></p>
                <p><input class="form-control" type="text" name="pollOptions[]" placeholder="Option" required/></p>
              </div>
            </div>
            <div class="col-sm-4">
              <p><a onclick="addOption()" class="btn btn-info form-control"><i class="fa fa-plus"></i> Add more options</a></p>
              <p><a onclick="removeOption()" class="btn btn-danger form-control"><i class="fa fa-minus"></i> Remove last option</a></p>
              <p><button class="btn btn-success form-control">Add poll</button></p>
            </div>
            <script>
              var optionsCount = 2;
              var options = document.querySelector("#options");
              function addOption(){
                var p = document.createElement("p");
                var option = document.createElement("input");
                option.setAttribute("class", "form-control");
                option.setAttribute("type", "text");
                option.setAttribute("name", "pollOptions[]");
                option.setAttribute("placeholder", "Option");
                option.setAttribute("required", "true");
                p.appendChild(option);
                options.appendChild(p);
                optionsCount++;
              }
              function removeOption(){
                if(optionsCount > 2){
                  options.removeChild(options.childNodes[options.childNodes.length-1]);
                  optionsCount--;
                } else {
                  alert("At least 2 options are needed!");  
                }
              }
            </script>
          </form>
        </div>

    </div>
  </div>
</div>

